{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports":  true,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext",
      "ScriptHost"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".",
    "sourceMap": true,
    "target": "es5",
    "types": ["reflect-metadata"]
  },
  "typeRoots" : [
    "./typings",
    "node_modules/@types"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
